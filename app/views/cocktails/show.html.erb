<div class="container">
  <h1><%= @cocktail.name %></h1>
  <%= cl_image_tag @cocktail.photo, height: 250, width: 300, crop: :fill %>
  <% @cocktail.doses.each do |dose| %>
  <p><%= dose.description %> of <%= dose.ingredient.name %> <%= link_to "[ DELETE ]", dose_path(dose), method: :delete %></p>
  <% end %>
  <%= link_to "Back to Cocktail-List", cocktails_path, class: "btn btn-primary" %>
  <%= link_to "Add a new Ingredient", new_cocktail_dose_path(@cocktail.id), class: "btn btn-primary" %>
</div>
